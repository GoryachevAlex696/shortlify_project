<div class="auth-container">
  <div class="auth-form">
    <h1 class="auth-title">Вход Shortlify</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form-content" }) do |f| %>
      <div class="auth-field">
        <%= f.text_field :login, 
              placeholder: "Email или имя пользователя", 
              autofocus: true,
              class: "auth-input" %>
      </div>

      <div class="auth-field">
        <%= f.password_field :password, 
              placeholder: "Пароль", 
              autocomplete: "current-password", 
              class: "auth-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Запомнить меня" %>
        </div>
      <% end %>

      <div class="auth-actions">
        <%= f.submit "Войти", class: "auth-submit-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>